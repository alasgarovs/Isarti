<ConnectionScreen>:
    MDBoxLayout:
        orientation: 'vertical'
        padding: dp(15)
        spacing: dp(25)
        md_bg_color: app.theme_cls.bg_dark if app.theme_cls.theme_style == "Dark" else app.theme_cls.bg_light

        # Back to top
        MDBoxLayout:
            orientation: 'vertical'
            height: dp(40)
            spacing: dp(5)
            size_hint: 1, None

            MDBoxLayout:
                orientation: 'horizontal'
                height: dp(40)
                spacing: dp(5)
                size_hint: 1, None
                
                MDIcon:
                    icon: "arrow-left"
                    theme_text_color: "Primary"
                    size_hint: None, None
                    size: dp(34), dp(34)
                    pos_hint: {"center_y": 0.5}
                    on_touch_down: if self.collide_point(*args[1].pos): root.navigate_to_profile()

                MDLabel:
                    text: "Bağlantı parametrləri"
                    theme_text_color: "Primary"
                    font_size: "18sp"
                    pos_hint: {"center_y": 0.5}
                    halign: 'left'
                    
            # Horizontal line
            MDSeparator:

        ScrollView:
            do_scroll_x: False

            # Danger Zone Header
            MDBoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: dp(420)
                spacing: dp(15)
                padding: dp(8)
                
                MDLabel:
                    text: 'Təhlükəli Zona'
                    font_size: "22sp"
                    theme_text_color: "Error"
                    size_hint_y: None
                    height: dp(30) 
                    halign: 'left'
                    valign: 'top' 
                    text_size: self.width, self.height
                    
                MDLabel:
                    text: 'Burada etdiyiniz hər bir dəyişiklik məlumat itkisi ilə nəticələnə bilər'
                    font_size: "16sp"
                    theme_text_color: "Error"
                    size_hint_y: None
                    height: dp(20)
                    halign: 'left'
                    text_size: self.width, None
            
                Widget:
                    size_hint_y: None
                    height: dp(2) 
                            
                # Device name
                MDTextField:
                    font_size: "18sp"
                    id: device_name
                    hint_text: "Cihaz adı..."
                    size_hint_y: None
                    height: dp(30)
                    max_text_length: 10
                    multiline: False
                            
                # Server IP
                MDTextField:
                    font_size: "18sp"
                    id: server_ip
                    hint_text: "Server ünvanı..."
                    size_hint_y: None
                    height: dp(30)
                    max_text_length: 15
                    multiline: False
                    
                # Port number
                MDTextField:
                    font_size: "18sp"
                    id: port_number
                    hint_text: "Port nömrəsi..."
                    size_hint_y: None
                    height: dp(30)
                    max_text_length: 5
                    multiline: False
                    input_filter: "int"
                
                # Save button
                MDRaisedButton:
                    text: "Saxla"
                    font_size: "18sp"
                    size_hint: None, None
                    height: dp(40)
                    on_press: root.save_connection()
